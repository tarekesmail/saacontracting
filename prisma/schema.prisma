generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  laborers         Laborer[]
  jobs             Job[]
  timesheets       Timesheet[]
  expenseCategories ExpenseCategory[]
  expenses         Expense[]
  invoices         Invoice[]

  @@map("tenants")
}

model Laborer {
  id           String    @id @default(cuid())
  name         String
  idNumber     String
  phoneNumber  String
  startDate    DateTime
  salaryRate   Decimal   @db.Decimal(10, 2) // What the laborer gets paid (SAR/hour)
  orgRate      Decimal   @db.Decimal(10, 2) // What we charge the organization (SAR/hour)
  tenantId     String
  jobId        String    // Made required
  isActive     Boolean   @default(true)

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  job        Job         @relation(fields: [jobId], references: [id])
  timesheets Timesheet[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([idNumber]) // ID Number must be globally unique across all tenants
  @@map("laborers")
}

model Job {
  id       String  @id @default(cuid())
  name     String
  tenantId String  // Jobs now belong directly to tenants
  isActive Boolean @default(true)

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  laborers   Laborer[]
  timesheets Timesheet[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, name])
  @@map("jobs")
}

model Timesheet {
  id              String   @id @default(cuid())
  date            DateTime @db.Date
  hoursWorked     Decimal  @db.Decimal(5, 2) // Hours worked (e.g., 8.5)
  overtime        Decimal  @db.Decimal(5, 2) @default(0) // Overtime hours
  overtimeMultiplier Decimal? @db.Decimal(3, 1) // Overtime multiplier (1.5, 2.0, 3.0, etc.) - null when no overtime
  notes           String?  // Optional notes
  
  laborerId  String
  jobId      String
  tenantId   String
  
  laborer    Laborer @relation(fields: [laborerId], references: [id], onDelete: Cascade)
  job        Job     @relation(fields: [jobId], references: [id])
  tenant     Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@unique([laborerId, date])
  @@map("timesheets")
}

model ExpenseCategory {
  id          String    @id @default(cuid())
  name        String
  description String?
  color       String    @default("#6B7280") // Hex color for UI
  isActive    Boolean   @default(true)
  
  tenantId    String
  tenant      Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  expenses    Expense[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([tenantId, name])
  @@map("expense_categories")
}

model Expense {
  id          String   @id @default(cuid())
  date        DateTime @db.Date
  amount      Decimal  @db.Decimal(10, 2) // Amount in SAR
  description String
  notes       String?  // Optional additional notes
  receipt     String?  // Optional receipt/reference number
  
  categoryId  String
  tenantId    String
  
  category    ExpenseCategory @relation(fields: [categoryId], references: [id])
  tenant      Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("expenses")
}

model Invoice {
  id              String   @id @default(cuid())
  invoiceNumber   String   @unique // Sequential invoice number
  issueDate       DateTime @db.Date
  dueDate         DateTime @db.Date
  
  // Customer Information
  customerName    String
  customerVat     String?  // Customer VAT number
  customerAddress String
  customerCity    String
  
  // Invoice Totals
  subtotal        Decimal  @db.Decimal(10, 2) // Amount before VAT
  vatAmount       Decimal  @db.Decimal(10, 2) // VAT amount (15%)
  totalAmount     Decimal  @db.Decimal(10, 2) // Total including VAT
  
  // Payment Information
  status          InvoiceStatus @default(DRAFT)
  paidDate        DateTime?
  paymentMethod   String?
  
  // ZATCA Compliance
  qrCode          String?  // Base64 encoded QR code
  zatcaHash       String?  // ZATCA cryptographic stamp
  
  // Relations
  tenantId        String
  tenant          Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  items           InvoiceItem[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("invoices")
}

model InvoiceItem {
  id              String  @id @default(cuid())
  description     String
  quantity        Decimal @db.Decimal(10, 2)
  unitPrice       Decimal @db.Decimal(10, 2)
  vatRate         Decimal @db.Decimal(5, 2) @default(15.00) // VAT percentage
  lineTotal       Decimal @db.Decimal(10, 2) // Quantity * Unit Price
  vatAmount       Decimal @db.Decimal(10, 2) // VAT for this line
  totalAmount     Decimal @db.Decimal(10, 2) // Line total + VAT
  
  invoiceId       String
  invoice         Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("invoice_items")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}